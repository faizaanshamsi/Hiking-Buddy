<%= form_for @hike do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
	<br>
	<%= f.label :location %>
	<%= f.text_field :location %>
	<br>
	<br>
	<%= f.label :website %>
	<%= f.url_field :website %>
	<br>
	<br>
	<%= f.submit(((params[:action] == 'new') ? 'Create' : 'Update') + ' hike') %>
<% end %>
