<!DOCTYPE html>
<html>
<head>
  <title>HikerHub</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <h1><a href="/">HikerHub</a></h1>
  </nav>

  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <%= content_tag :div, msg %>
    <% end %>
  <% end %>

  <%= yield %>

</body>
</html>
