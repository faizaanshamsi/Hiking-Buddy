<div class="container text-center">
  {{#each error in validationErrors}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
  {{/each}}
  <div class="well">
    {{#em-form model=this action="newHike"}}
      <div>
        {{textarea class="form-control" placeholder="Name" value=name}}
      </div>
      <div>
        {{textarea class="form-control" placeholder="Location" value=location}}
      </div>
      <div>
        {{textarea class="form-control" placeholder="Description" value=description}}
      </div>
      <div>
        {{textarea class="form-control" placeholder="Website" value=website}}
      </div>
    {{/em-form}}
  </div>
</div>
